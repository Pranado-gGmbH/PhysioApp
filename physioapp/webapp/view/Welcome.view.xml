<mvc:View
	controllerName="sapcp.cf.strongpeople.physioapp.controller.Welcome"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc" >
	<Page
		title="{i18n>WELCOME_TITLE}"
		enableScrolling="true">
		<footer>
			<Toolbar>
			</Toolbar>
		</footer>
		<content>
			<HBox
				alignItems="Center"
				justifyContent="Center" >
				<Image
					src="img/physio1.jpg"
					densityAware="false"
					width="100%" 
					backgroundPosition="relative"
					height="100%">
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Image>
			</HBox>
		</content>
	</Page>
</mvc:View>